{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: g++ build active file",
      "command": "/usr/bin/g++",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "-ggdb",
        // "-O2",  // removed for debugging
        "-DNDEBUG",
        "-pedantic-errors",
        "-Werror",
        "-std=c++23",
        // "${file}", # for a single file
        "${fileDirname}/**.cpp",
        "-o",
        "${fileDirname}/bin/${fileBasenameNoExtension}",
        "-lSDL3"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    }
  ],
  "version": "2.0.0"
}
